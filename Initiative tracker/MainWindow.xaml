<Window x:Class="Initiative_tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Initiative_tracker"
        mc:Ignorable="d"
        Title="Initiative Tracker" Height="360" Width="800" ResizeMode="NoResize">

    <!--   Styles   -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Book Antiqua"/>
            <Setter Property="Background" Value="#4C000000"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>


        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Background" Value="#FF6B5E54"/>
        </Style>



        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Book Antiqua"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Panel.ZIndex" Value="10"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Book Antiqua"/>
            <Setter Property="Panel.ZIndex" Value="10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>



        <Style TargetType="ListBox">
            <Setter Property="FontFamily" Value="Book Antiqua"/>
            <Setter Property="Background" Value="#7F000000"/>
            <Setter Property="Foreground" Value="White"/>

        </Style>



        <Style TargetType="DatePicker">
            <Setter Property="CalendarStyle" Value="{x:Null}"/>
            <Setter Property="FontFamily" Value="Book Antiqua"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
        </Style>
        <Style TargetType="DatePickerTextBox">
            <Setter Property="FontFamily" Value="Book Antiqua"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
        </Style>

        <Style TargetType="CheckBox" >
            <Setter Property="FontFamily" Value="Book Antiqua"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="FontFamily" Value="Book Antiqua"/>
            <Setter Property="Background" Value="#4C000000"/>
        </Style>



        <Style TargetType="Grid">
            <Setter Property="Background" Value="#FF483F3B"/>
        </Style>
    </Window.Resources>





    <!--   Grid   -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88.882"/>
            <RowDefinition Height="122.069"/>
            <RowDefinition Height="67"/>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <!--   Labels   -->
        <Label Content="HP : " HorizontalAlignment="Left" Margin="351,25,0,0" VerticalAlignment="Top" Height="56" Grid.Column="1" Width="291"/>
        <Label Content="Bonus :" HorizontalAlignment="Right" Grid.Column="1" Margin="0,11,116,0" Grid.Row="1" FontSize="20" VerticalAlignment="Top" Height="55" Width="96" RenderTransformOrigin="0.037,0.973"></Label>

        <!--   Textboxes   -->
        <TextBox Name="Nmbx" HorizontalAlignment="Left" Margin="40,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="291" Grid.Column="1" Height="46" FontSize="30" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" LostFocus="Nmbx_TextChanged" />
        <TextBox Name="Hpbx" HorizontalAlignment="Left" Margin="406,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="70" Grid.Column="1" Height="46" FontSize="30" TextAlignment="Center" LostFocus="Hpbx_TextChanged" />
        <TextBox Name="Bbx"  Grid.Column="1" HorizontalAlignment="Left" Margin="388,11,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="94" TextAlignment="Right" Height="55" Grid.Row="1" FontSize="20" LostFocus="Bbx_TextChanged" TextChanged="Bbx_TextChanged_1" />
        <TextBox Name="Ibx" Grid.Column="1" HorizontalAlignment="Left" Margin="388,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="94" TextAlignment="Right" Height="55" Grid.Row="1" FontSize="20" Grid.RowSpan="2" LostFocus="Ibx_TextChanged" TextChanged="Ibx_TextChanged_1" />

        <!--   Checkboxes   -->
        <CheckBox Name="ACCB" Content="Action" HorizontalAlignment="Left" Margin="21,0,0,0" VerticalAlignment="Top" Grid.Column="1" Checked="ACCB_Checked" Unchecked="ACCB_Checked" Grid.Row="1"/>
        <CheckBox Name="RCB" Content="Reaction" HorizontalAlignment="Left" Margin="21,74,0,0" VerticalAlignment="Top" Grid.Column="1" Checked="RCB_Checked" Unchecked="RCB_Checked" Grid.Row="1"/>

        <!--   Egyébb   -->
        <DatePicker Name="BTDP" HorizontalAlignment="Left" Margin="35,0,0,10" VerticalAlignment="Bottom" Width="182" Grid.Column="1" Height="40" SelectedDate="1000-10-10" Grid.Row="2" LostFocus="BTDP_DateChanged"/>


        <!--   Kezelő felület   -->
        <ComboBox HorizontalAlignment="Left" Name="eraseCB" Margin="10,10,0,0" VerticalAlignment="Top" Width="232" Grid.Column="1" Height="42" Grid.Row="3" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button Grid.Column="1" Content="Add" HorizontalAlignment="Left" Margin="266,10,0,0" VerticalAlignment="Top" Height="42" Width="57" Grid.Row="3" Click="Button_Click_1"/>
        <Button Grid.Column="1" Content="re-roll" HorizontalAlignment="Left" Margin="428,10,0,0" VerticalAlignment="Top" Height="42" Width="63" Grid.Row="3" Click="Button_Click"/>
        <Border BorderThickness="1" Grid.Column="1" Margin="10,10,10,10" CornerRadius="20,20,20,20" Panel.ZIndex="-1" Grid.RowSpan="3"/>
        <Border BorderThickness="1" Grid.Column="1" Margin="338,25,22,17" CornerRadius="20,20,20,20" Background="#7F000000" />
        <Label Content="Action :" HorizontalAlignment="Right" Grid.Column="1" Margin="0,70,116,0" Grid.Row="1" FontSize="20" VerticalAlignment="Top" Height="55" Width="96" Grid.RowSpan="2"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="ListBox_SelectionChanged" x:Name="lstbx1" Margin="0,-1,0,0" Grid.RowSpan="4"/>
        <CheckBox x:Name="BACB" Content="Bonus action" HorizontalAlignment="Left" Margin="21,38,0,0" VerticalAlignment="Top" Grid.Column="1" Checked="BACB_Checked" Unchecked="BACB_Checked" Grid.Row="1"/>
        <Button Grid.Column="1" Content="Save" HorizontalAlignment="Left" Margin="345,10,0,0" VerticalAlignment="Top" Height="42" Width="62" Grid.Row="3" Click="Button_Click_2"/>


        <!--   Szerkezet   -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*">

            </ColumnDefinition>
            <ColumnDefinition Width="63*">

            </ColumnDefinition>


        </Grid.ColumnDefinitions>
    </Grid>
</Window>
