<Window x:Class="Initiative_tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Initiative_tracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="40,30,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="291" Grid.Column="1" Height="46" FontSize="30" Background="White">
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.987"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>
        <ComboBox HorizontalAlignment="Left" Margin="10,382,0,0" VerticalAlignment="Top" Width="232" Grid.Column="1" Height="42"/>
        <CheckBox Content="Action" HorizontalAlignment="Left" Margin="40,81,0,0" VerticalAlignment="Top" Height="20" Grid.Column="1" Width="116"/>
        <DatePicker HorizontalAlignment="Left" Margin="40,308,0,0" VerticalAlignment="Top" Width="146" Grid.Column="1" Height="35"/>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="20" Padding="10,10,10,10" Margin="10,10,10,10">
            <ListBox d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="20" Padding="10,10,10,10" Margin="10,10,10,10">
            <ListBox d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Margin="10,10,10,69" CornerRadius="20,20,20,20"/>
        <CheckBox Content="Bonus action" HorizontalAlignment="Left" Margin="40,101,0,0" VerticalAlignment="Top" Height="20" Grid.Column="1" Width="116"/>
        <CheckBox Content="Reaction" HorizontalAlignment="Left" Margin="40,121,0,0" VerticalAlignment="Top" Height="20" Grid.Column="1" Width="116"/>
        <Button Grid.Column="1" Content="Add" HorizontalAlignment="Left" Margin="264,382,0,0" VerticalAlignment="Top" Height="42" Width="100"/>
        <Button Grid.Column="1" Content="Start" HorizontalAlignment="Left" Margin="391,382,0,0" VerticalAlignment="Top" Height="42" Width="100"/>
        <TextBox HorizontalAlignment="Left" Margin="351,30,0,0" TextWrapping="Wrap" Text="HP" VerticalAlignment="Top" Width="125" Grid.Column="1" Height="46" FontSize="30" Background="White" TextAlignment="Center">
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.987"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="351,93,0,0" TextWrapping="Wrap" Text="Bonus" VerticalAlignment="Top" Width="125" TextAlignment="Center"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="351,116,0,0" TextWrapping="Wrap" Text="Initiative" VerticalAlignment="Top" Width="125" TextAlignment="Center"/>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*">

            </ColumnDefinition>
            <ColumnDefinition Width="63*">

            </ColumnDefinition>


        </Grid.ColumnDefinitions>
    </Grid>
</Window>
